{
    "manifest_version": 3,
    "name": "Valet",
    "version": "1.0.0",
    "icons": {
      "16": "white-icon.svg"
    },
    "action": {
      "default_icon": {
        "16": "white-icon.svg"
      },
      "default_popup": "src/popup.html"
    },
    "background": {
      "service_worker": "src/background.ts",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["src/content-script.ts"],
        "run_at": "document_start",
        "all_frames": true,
        "match_about_blank": true,
        "type": "module"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["src/sandbox.html", "public/*"],
        "matches": ["*://*/*"]
      }
    ],
    "sandbox": {
      "pages": ["src/sandbox.html"]
    }
  }
